                        <div class="article_content">
                            {{ article.content | _resizeImages({'width': 400}) | raw }}
                        </div><!-- .content-->

                    </div>


                    <div class="col-md-3">
                        <div class="article-sidebar">

                            <div class="row">

                                <div class="col-sm-9">
                                    <div class="ad-side-container">
                                        <div class="ad-square" style="width:300px;"></div>
                                    </div>

                                    <h2 class="sidebar-header">Latest articles</h2>
                                </div>



                                <div class="col-md-9 col-sm-4">
                                    {% for i in 0..2 if articles[testCount] %}
                                        {{this.render('partials/_single-article.twig', {
                                            article: articles[testCount], 
                                            position: (articleCount+1),
                                            containerClass: 'feature-side feature-side-tablet feature-side-mobile'
                                        }) | raw}}
                                        
                                        {% if i < 2 %}
                                            <hr class="divide15 visible-md-block visible-lg-block">
                                            <hr class="divide10 visible-xs-block visible-sm-block">
                                        {% endif %}

                                        {% set articleCount = articleCount + 1 %}
                                    {% endfor %}

                                    <hr class="divide15 visible-md-block visible-lg-block space-only">
                                    <hr class="divide10 visible-xs-block visible-sm-block space-only">

                                    <div class="advert visible-md-block visible-lg-block">
