            </section>




            <section class="advert" style="background:gray;height:100px;"></section>





            {% if sections['social field'].feed.articles|length > 0 %}
                {% set socialCount = (dev) ? articleCount : 0 %}

                <section>
                    <div class="row">
                        <div class="col-sm-9 section-header">
                            <div class="hk social">
                                <h2>social field</h2>
                                <p></p>
                            </div>
                        </div>
                    </div>

                    <div class="row four-cols socialhide one-deck">
                        {% for i in 0..11 if sections['social field'].feed.articles[socialCount] %}
                            {{this.render('partials/_single-article.twig', {
                                article: sections['social field'].feed.articles[socialCount], 
                                imageSize: {width:300},
                                containerClass: 'col-sm-1 card-sm feature-side-mobile with-space'
                            }) | raw}}
                            {% set socialCount = (dev) ? articleCount : socialCount + 1 %}
                        {% endfor %}
                    </div>
                    <a class="showMoreArticles" 
                        data-container=".socialhide"
                        href="#">Show more</a>


                </section>
            {% endif %}







            {% if sections['tennis'].feed.articles|length > 0 %}
                {% set tennisCount = (dev) ? articleCount : 0 %}

                <section>
                    <div class="row">
                        <div class="col-sm-9 section-header">
                            <div class="hk">
                                <h2>tennis</h2>
                                <p></p>
                            </div>
                        </div>
                    </div>

                    <div class="row four-cols one-deck">
                        {% for i in 0..3 if sections['tennis'].feed.articles[tennisCount] %}
                            {{this.render('partials/_single-article.twig', {
                                article: sections['tennis'].feed.articles[tennisCount], 
                                imageSize: {width:300},
                                containerClass: 'col-sm-1 card-sm feature-side-mobile with-space'
                            }) | raw}}
                            {% set tennisCount = (dev) ? articleCount : tennisCount + 1 %}
                        {% endfor %}

                    </div>
                </section>
            {% endif %}





            {% if sections['cricket'].feed.articles|length > 0 %}
                {% set cricketCount = (dev) ? articleCount : 0 %}

                <section>
                    <div class="row">
                        <div class="col-sm-9 section-header">
                            <div class="hk">
                                <h2>cricket</h2>
                                <p></p>
                            </div>
                        </div>
                    </div>

                    <div class="row four-cols one-deck">
                        {% for i in 0..3 if sections['cricket'].feed.articles[cricketCount] %}
                            {{this.render('partials/_single-article.twig', {
                                article: sections['cricket'].feed.articles[cricketCount], 
                                imageSize: {width:300},
                                containerClass: 'col-sm-1 card-sm feature-side-mobile with-space'
                            }) | raw}}
                            {% set cricketCount = (dev) ? articleCount : cricketCount + 1 %}
                        {% endfor %}

                    </div>
                </section>
            {% endif %}





            {% if sections['other sport'].feed.articles|length > 0 %}
                {% set sportCount = (dev) ? articleCount : 0 %}

                <section>
                    <div class="row">
                        <div class="col-sm-9 section-header">
                            <div class="hk">
                                <h2>other sport</h2>
                                <p></p>
                            </div>
                        </div>
                    </div>

                    <div class="row four-cols one-deck">
                        {% for i in 0..3 if sections['other sport'].feed.articles[sportCount] %}
                            {{this.render('partials/_single-article.twig', {
                                article: sections['other sport'].feed.articles[sportCount], 
                                imageSize: {width:300},
                                containerClass: 'col-sm-1 card-sm feature-side-mobile with-space'
                            }) | raw}}
                            {% set sportCount = (dev) ? articleCount : sportCount + 1 %}
                        {% endfor %}

                    </div>
                </section>
            {% endif %}
        </div>


    </main><!-- .site-main -->