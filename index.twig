{{ set(this, 'title', _Blog.getBlogTitle()) }}
{% set networkData = _Network.getNetworkData() %}
{% set blogData    = _Blog.getBlog() %}
{% set layout      = blogData.layout %}


{{this.registerJs("CardController();")}}


{% set limit = 18 %}
{% set articlesArr = _Blog.getBlogFeed({'limit': limit, 'offset': 0}) %}
{% set articles = articlesArr.articles %}
{% set popularArticles = _Article.getPopularArticles({ limit: 10, sortBy: 'VIEWS', scope: 'network' }) %}



{% set events = _Event.getEvents() %}



<!-- used to index each article as we loop over throughout the template -->
{% set articleCount = _AppHelper.getApplicationEnv() == 'DEV' ? 0 : 0 %}
{% set dev = _AppHelper.getApplicationEnv() == 'DEV' ? true : false %}

{% set tabletCount = 0 %}
{% set desktopCount = 0 %}

{% set sections =  {
        "social field": {
            "feed": "",
            "link": "",
            "limit" : 12
        }, 
        "tennis": {
            "feed": "",
            "link": "",
            "limit" : 4
        },
        "cricket": {
            "feed": "",
            "link": "",
            "limit" : 4
        }, 
        "other sport": {
            "feed": "",
            "link": "",
            "limit" : 4
        }
    }
%}

{% for key, value in sections %}
    {% for blog in networkData.networkBlogs %}
        {% if blog.title | lower == key %}
            {% set sections = sections | merge({
                (key) : {
                    'feed': _Blog.getBlogFeed({'limit': sections[key]['limit'], 'offset': 0, 'blogid':blog.guid}),
                    'link' : blog.url
                    }
                }) %}
        {% endif %}
    {% endfor %}
{% endfor %}











    <main id="main" class="site-main" role="main">
        
        <div class="container">

            <section class="home-main-stories">
                

                <div class="row">
                    
                    <div class="col-xs-9 col-sm-9 col-md-6">

                        <!-- main article -->
                        {% if articles[articleCount] %}                                                          
                            {{this.render('partials/_single-article.twig', {
                                article: articles[articleCount], 
                                position: articleCount + 1, 
                                imageSize: {width:630, height:413},
                                containerClass: 'home-feature home-feature-tablet home-feature-mobile'
                            }) | raw}}
                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}

                        {% endif %}

                        <!-- most popular & wide card for desktop, mobile -->
                        <div class="row popular two-cols visible-xs-block visible-md-block visible-lg-block">
                            <div class="col-md-1 col-sm-5 most-popular">
                                <h2>What you&rsquo;re cheering for</h2>

                                {% for i in 0..4 if popularArticles[i] %}
                                        {{this.render('partials/_single-article.twig', {
                                            article: popularArticles[i], 
                                            imageSuppress: true, 
                                            containerClass: 'card-popular'
                                        }) | raw}}
                                {% endfor %}
                            </div>

                            <div class="advert visible-sm-block ad-square col-sm-4">
                                <img src="{{networkData.templatePath}}/static/images/ads/300x250.jpg">
                            </div>


                            <!-- wide card for desktop & mobile (don't increment as we do tablet next) -->
                            <div class="col-sm-1 col-md-1 visible-xs-block visible-md-block visible-lg-block">

                                {% if articles[articleCount] %}
                                    {{this.render('partials/_single-article.twig', {
                                        article: articles[articleCount], 
                                        position: articleCount + 1, 
                                        imageSize: {width:300},
                                        containerClass: 'card-sm-wide card-sm-mobile'
                                    }) | raw}}
                                    {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                                {% endif %}
                            </div>
                        </div>
                    </div>


                    <!-- display five stories & CTA for desktop / mobile -->
                    {% if articles[articleCount] %}
                    <div class="col-xs-9 col-md-3 visible-xs-block visible-md-block visible-lg-block">

                        <hr class="divide10 visible-xs-block" style="clear:both">

                        {% for i in 0..4 if articles[i] %}
                            {{this.render('partials/_single-article.twig', {
                                article: articles[articleCount], 
                                position: articleCount + 1,
                                imageSize: {width:300},
                                containerClass: 'feature-side feature-side-tablet feature-side-mobile'
                            }) | raw}}
                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                            {% if i < 4 %}
                                <hr class="divide13">
                            {% endif %}

                        {% endfor %}

                        <hr class="divide13 visible-md-block visible-lg-block space-only">
                        <hr class="divide10 visible-xs-block visible-sm-block space-only">

                        <div class="">
                            <a target="_blank" href="http://getemonside.us16.list-manage.com/subscribe?u=19a286b6a701993a54be44c9b&id=dc1298a714">
                                <img src="{{networkData.templatePath}}/static/images/the-short-side-cta.png">
                            </a>
                        </div>
                    </div>
                    {% endif %}

                </div>
            </section>




            <section class="middle">
                   
                <div class="row row-space maincards">
                    <div class="col-sm-8 col-md-6">
                        {% for i in 0..5 if articles[articleCount] %}

                            {{this.render('partials/_single-article.twig', {
                                article: articles[articleCount], 
                                position: articleCount + 1, 
                                imageSize: {width:300},
                                containerClass: 'card-rec card-rec-tablet card-rec-mobile'
                            }) | raw}}
                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                            
                            <hr class="divide18 visible-md-block visible-lg-block space-only">
                            <hr class="divide10 visible-xs-block visible-sm-block space-only">

                        {% endfor %}
                    </div>



                    {% set desktopCount = articleCount %}
                    {% set tabletCount = articleCount %}

                    <!--  display side stories for desktop   -->
                    <div class="col-md-3 visible-xs-block visible-md-block visible-lg-block">

                        <div class="advert visible-md-block visible-lg-block ad-large-vert">
                            <img src="{{networkData.templatePath}}/static/images/ads/300x600.jpg">
                        </div>

                        <hr class="divide18 visible-md-block visible-lg-block space-only">
                        <hr class="divide10 visible-xs-block visible-sm-block space-only">


                        {% for i in 0..2 if articles[desktopCount] %}
                            {{this.render('partials/_single-article.twig', {
                                article: articles[desktopCount], 
                                position: desktopCount + 1, 
                                imageSize: {width:300},
                                containerClass: 'feature-side feature-side-tablet feature-side-mobile'
                            }) | raw}}
                            {% set desktopCount = (dev) ? desktopCount : desktopCount + 1 %}
                            
                            {% if i != 2 %}
                                <hr class="divide18 visible-md-block visible-lg-block">
                                <hr class="divide10 visible-xs-block visible-sm-block">
                            {% endif %}
                        {% endfor %}

                    </div>

                    <!-- tablet displays three more wide cards -->                    
                    <div class="col-sm-8 visible-sm-block">

                        {% for i in 0..2 if articles[tabletCount] %}

                            {{this.render('partials/_single-article.twig', {
                                article: articles[tabletCount], 
                                position: tabletCount + 1, 
                                imageSize: {width:300},
                                containerClass: 'card-rec card-rec-tablet card-rec-mobile'
                            }) | raw}}
                            {% set tabletCount = (dev) ? tabletCount : tabletCount + 1 %}
                            
                            <hr class="divide18 visible-md-block visible-lg-block space-only">
                            <hr class="divide10 visible-xs-block visible-sm-block space-only">

                        {% endfor %}

                    </div>

                    {% set articleCount = tabletCount %}                    

                </div>

            </div>




