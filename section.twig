{{ set(this, 'title', _Blog.getBlogTitle()) }}
{% set networkData = _Network.getNetworkData() %}
{% set blogData    = _Blog.getBlog() %}


{{this.registerJs("CardController();")}}

{% set limit = 7 %}

{% set articlesArr = _Blog.getBlogFeed({'limit': limit, 'offset': 0}) %}
{% set articles = articlesArr.articles %}


<!-- used to index each article as we loop over throughout the template -->
{% set articleCount = _AppHelper.getApplicationEnv() == 'DEV' ? 0 : 0 %}
{% set dev = _AppHelper.getApplicationEnv() == 'DEV' ? false : false %}



{% set popularArticles = _Article.getPopularArticles({ limit: 10, sortBy: 'VIEWS', scope: 'network' }) %}



    <main id="main" class="site-main" role="main">
        
        <div class="container">

            <section>
                <div class="row">
                    <div class="col-sm-9 header">
                        <div class="hk">
                            <h2>{{this.title}}</h2>
                            <p>{{blogData.shortDescription }}</p>
                        </div>
                    </div>
                </div>
            </section>


            <section class="middle">


                <div class="row row-space maincards">
                    <div class="col-sm-6">
                        {% for i in 0..6 if articles[articleCount] %}

                            {{this.render('partials/_single-article.twig', {
                                article: articles[articleCount], 
                                position: articleCount + 1, 
                                imageSize: {width:300},
                                containerClass: 'card-rec card-rec-tablet card-rec-mobile'
                            }) | raw}}
                            {% set articleCount = (dev) ? articleCount : articleCount + 1 %}
                            
                             {% if i != 6 %}
                                <hr class="divide18 visible-md-block visible-lg-block">
                                <hr class="divide10 visible-xs-block visible-sm-block">
                            {% endif %}
                        {% endfor %}


                    </div>



                    <div class="col-sm-3">

                        <div class="advert visible-md-block visible-lg-block ad-large-vert">
                            <div id='sidepanelAd' style='height:600px; width:300px;'>
                                <script>
                                    document.currentScript.parentNode.id = sidepanelID;
                                    googletag.cmd.push(function() { googletag.display(sidepanelID); });
                                </script>
                            </div>
                        </div>
                        {# <div class="advert visible-sm-block ad-square col-sm-4">
                        <div id='boxad' class="" style='height:250px; width:300px;'>
                                    <script>
                                        document.currentScript.parentNode.id = boxadID;
                                        googletag.cmd.push(function() { googletag.display(boxadID); });
                                    </script>
                                </div>
                        </div> #}

                        <hr class="divide18 visible-md-block visible-lg-block space-only">
                        <hr class="divide10 visible-xs-block visible-sm-block space-only">

                        <div class="most-popular">
                            <h2>What you&rsquo;re cheering for</h2>
                        </div>

                        {% for i in 0..3 if popularArticles[i] %}
                            {{this.render('partials/_single-article.twig', {
                                article: popularArticles[i], 
                                imageSize: {width:300},
                                containerClass: 'feature-side feature-side-tablet feature-side-mobile'
                            }) | raw}}                            

                            {% if i != 3 %}
                                <hr class="divide18 visible-md-block visible-lg-block">
                                <hr class="divide10 visible-xs-block visible-sm-block">
                            {% endif %}
                        {% endfor %}


                        <hr class="divide13 visible-md-block visible-lg-block space-only">
                        <hr class="divide10 visible-xs-block visible-sm-block space-only">

                        <hr class="divide18 visible-md-block visible-lg-block space-only">

                        <div class="visible-md-block visible-lg-block">
                            <a target="_blank" href="http://getemonside.us16.list-manage.com/subscribe?u=19a286b6a701993a54be44c9b&id=dc1298a714">
                                <img src="{{networkData.templatePath}}/static/images/short-side-newsletter-cta.png">
                            </a>
                        </div>



                    </div>
                </div>

            <div class="advert ad-banner hidden-xs hidden-sm">
                <div id='widebanner2ID' style='width:970px;margin: 0 auto;'>
                    <script>
                        document.currentScript.parentNode.id = widebanner2ID;
                        googletag.cmd.push(function() { googletag.display(widebanner2ID); });
                    </script>
                </div>
                <span class="add-text" style="display:block;width:970px;margin:0 auto;">Advertisement</span>
            </div><!--add add-header-top-->

            <div class="advert ad-banner hidden-xs hidden-md hidden-lg">
                <div id='smallbanner2ID' style='width:728px;margin: 0 auto;'>
                    <script>
                        document.currentScript.parentNode.id = smallbanner2ID;
                        googletag.cmd.push(function() { googletag.display(smallbanner2ID); });
                    </script>
                </div>
                <span class="add-text" style="display:block;width:728px;margin:0 auto;">Advertisement</span>
            </div><!--add add-header-top-->
            <div class="col-sm-8 hidden-sm hidden-md hidden-lg">
                <div class="advert ad-banner hidden-sm hidden-md hidden-lg">
                    <div id='tinybanner2Ad' style='height:75px; width:300px;margin: 0 auto;'>
                        <script>
                            document.currentScript.parentNode.id = tinybanner2ID;
                            googletag.cmd.push(function() { googletag.display(tinybanner2ID); });
                        </script>
                    </div>
         
                </div>
            </div>



                {{ this.render('partials/ajaxarticles.twig', {
                    limit: limit, 
                    non_pinned: articlesArr.existingNonPinnedCount, 
                    articles: articles,
                    card_style: "card-rec card-rec-tablet card-rec-mobile",
                    container:"mainAjaxArticles",
                    border: "visible"
                }) | raw }}


            </section>


    </main><!-- .site-main -->