{% set adPlace = 'AdSense' %}

{% set dfpAcct = '21647808462' %}

<script>
 
  blogName = '{{blogNetworkName}}'

  googletag.cmd.push(function() {         
                googletag.pubads().enableSingleRequest();
                googletag.pubads().collapseEmptyDivs();
                googletag.pubads().setCentering(true);
                googletag.enableServices();
                
            });

  var invSpace = '{{adPlace}}'
  var bannerSize = [[970,90],[728,90],[300,100],[234,60],[300,75]];
  var bannerMap = [[[1025,0],[970,90]],[[768,0],[728,90]],[[0,0],[[300,100],[234,60],[300,75]]]];
  var mRecSize = [[300,250],[300, 100],[234,60],[300,75]];
  var mRecMap = [[[768,0],[300,250]],[[0,0],[[300,100],[234,60],[300,75]]]];
  var miniSize = [[300, 100],[234,60],[300,75]];
  var miniMap = [[[992,0],[]],[[0,0],[[300,100],[234,60],[300,75]]]];
  var hPageSize = [[300, 600],[300,100],[234,60],[300,75]];
  var hPageMap = [[[768,0],[300,600]],[[0,0],[[300,100],[234,60],[300,75]]]];
    
  var nextAdId = 1;
  function generateNextAdName() {
     var id = nextAdId++;
     return 'adSlot' + id;
  }

  function loadNextAd(blogAd,adDivId,adClass,sizes,mapping) {
    console.log(sizes);
    console.log(mapping);
    var adSlot = document.getElementById(adDivId);
    var slotName = generateNextAdName();
    var slotDiv = document.createElement('div');
    adSlot.appendChild(slotDiv);
    slotDiv.id = slotName;
    slotDiv.setAttribute( 'class', 'google_ad' );
    adSlot.id = "";
    adSlot.setAttribute( 'class', adClass );
    
    googletag.cmd.push(function() {
      var slot = googletag.defineSlot('/{{dfpAcct}}/'+blogAd, sizes, slotName).setTargeting().defineSizeMapping(mapping).addService(googletag.pubads());
      console.log(slot);
      googletag.display(slotName);
      googletag.pubads().refresh([slot]);
    });
  }


</script>